@{
    ViewData["Title"] = "Prediction Result";
}

<style>
    main {
        font-family: Arial, sans-serif;
        background-color: #f5f8fa;
        padding: 20px;
        text-align: center;
    }

    .result-container {
        background-color: #ffffff;
        border: 1px solid #d9e9f3;
        border-radius: 10px;
        padding: 20px;
        max-width: 800px;
        margin: auto;
    }

        .result-container img {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
            border-radius: 8px;
        }

        .result-container h3 {
            margin-top: 20px;
            font-size: 18px;
            color: #007bff;
        }

    .btn {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>

<main>
    <div class="result-container">
        <h2>Prediction Result</h2>
        <p><strong>MRI Name:</strong> @ViewBag.MRIName</p>
        <p><strong>Prediction:</strong> @ViewBag.Prediction</p>

        <h3>Visualization</h3>
        <img src="@ViewBag.ImageUrl" alt="Tumor Visualization" />

        <a href="/Main/Mainpage" class="btn">Upload Another File</a>
    </div>
</main>
