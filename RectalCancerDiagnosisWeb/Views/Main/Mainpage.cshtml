
@{
    ViewData["Title"] = "Mainpage";
}

<style>
    main {
        font-family: Arial, sans-serif;
        background-color: #e6f7ff;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        box-sizing: border-box;
    }

    h2 {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        background-color: #ffffff;
        border: 1px solid #d9e9f3;
        border-radius: 10px;
        padding: 20px 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

        form label {
            font-size: 16px;
            font-weight: bold;
            color: #0056b3;
            display: block;
            margin-bottom: 5px;
        }

        form input[type="text"],
        form input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #cce4f6;
            border-radius: 5px;
            font-size: 14px;
            box-sizing: border-box;
            background-color: #f9fcff;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            form input[type="text"]:focus,
            form input[type="file"]:focus {
                border-color: #007bff;
                box-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
                outline: none;
            }

        form button {
            width: 100%;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            form button:hover {
                background-color: #0056b3;
            }

            form button:active {
                transform: scale(0.98);
            }
</style>


<h2>Upload NII File</h2>

<form action="/Main/UploadNii" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="mriName">Name your MRI</label>
        <input type="text" id="mriName" name="mriName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="niiFile" class="form-label">Choose a NII File</label>
        <input type="file" id="niiFile" name="niiFile" class="form-control" accept=".nii" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
