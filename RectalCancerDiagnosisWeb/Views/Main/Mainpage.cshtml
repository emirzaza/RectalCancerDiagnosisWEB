
@{
    ViewData["Title"] = "Mainpage";
}

<style>
    main {
        font-family: Arial, sans-serif;
        background-color: #e6f7ff;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        box-sizing: border-box;
    }

    h2 {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        background-color: #ffffff;
        border: 1px solid #d9e9f3;
        border-radius: 10px;
        padding: 20px 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

        form label {
            font-size: 16px;
            font-weight: bold;
            color: #0056b3;
            display: block;
            margin-bottom: 5px;
        }

        form input[type="text"],
        form input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #cce4f6;
            border-radius: 5px;
            font-size: 14px;
            box-sizing: border-box;
            background-color: #f9fcff;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            form input[type="text"]:focus,
            form input[type="file"]:focus {
                border-color: #007bff;
                box-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
                outline: none;
            }

        form button {
            width: 100%;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            form button:hover {
                background-color: #0056b3;
            }

            form button:active {
                transform: scale(0.98);
            }


</style>

<h2>ADD MRI @ViewBag.UserId </h2>

<form >
    <div class="mb-3">
        <label>Name your mri</label>
        <br />
        <input type ="text" />
        <br />
        <label for="formFile" class="form-label">Choose the mri file</label>
        <br />
        <input class="form-control" type="file" id="formFile" name="image" required>
    </div>
    
    <button type="submit" class="btn btn-primary">SUBMIT</button>
</form>