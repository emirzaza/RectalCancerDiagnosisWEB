@{
    ViewData["Title"] = "accountCenter";
}



<style>
   
    main {
        font-family: Arial, sans-serif;
        background-color: #e6f7ff;
        background-size: cover;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        box-sizing: border-box;
    }

  
    h1 {
        color: #007bff;
        text-align: center;
        font-size: 36px;
        margin-bottom: 20px;
    }

    form {
        background-color: #ffffff;
        border: 1px solid #d9e9f3;
        border-radius: 10px;
        padding: 20px 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

       
        form label {
            font-size: 16px;
            font-weight: bold;
            color: #0056b3;
            display: block;
            margin-bottom: 5px;
        }

        
        form input[type="text"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #cce4f6;
            border-radius: 5px;
            font-size: 14px;
            box-sizing: border-box;
            background-color: #f9fcff;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            
            form input[type="text"]:focus {
                border-color: #007bff;
                box-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
                outline: none;
            }

      
        form button {
            width: 100%;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            
            form button:hover {
                background-color: #0056b3;
            }

            form button:active {
                transform: scale(0.98);
            }

      
        form br {
            display: none;
        }

    
    .content-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 100%;
        max-width: 500px;
        margin-top: 30px;
    }
</style>

    
    <div class="content-wrapper">
    <h1>accountCenter</h1>
    <form asp-controller="account" asp-action="signup" method="post">

        <label for="Name">Name:</label>
        <input type="text" />
        <br />
        <label for="Surname">Surname:</label>
        <input type="text" />
        <br />
        <label for="Username">Username:</label>
        <input type="text" />
        <br />
        <label for="Password">Password:</label>
        <input type="text" />
        <br />
        <label for="Email">E-mail:</label>
        <input type="text" />
        <br />

        <button type="submit"> UPDATE </button>

    </form>
    <</div>
