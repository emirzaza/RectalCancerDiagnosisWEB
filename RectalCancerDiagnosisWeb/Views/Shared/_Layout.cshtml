<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RectalCancerDiagnosisWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RectalCancerDiagnosisWeb.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/vtk.js@20.2.1"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Sol Taraf: Uygulama Adı -->
                <a class="navbar-brand" href="#">MRI DETECTION APP</a>

                <!-- Orta Kısım: Menü -->
                <ul class="navbar-nav justify-content-center align-items-center">
                    <li class="nav-item mx-2">
                        <a class="nav-link active" aria-current="page" asp-controller="Main" asp-action="Mainpage">Main Page</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link active" aria-current="page" asp-controller="Main" asp-action="previousResults">Previous Results</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link active" aria-current="page" asp-controller="Main" asp-action="accountCenter">Account Center</a>
                    </li>
                </ul>

                <!-- Sağ Taraf: Log Out -->
                <a asp-controller="Account" asp-action="logout">
                    <button class="logout-button">Log Out</button>
                </a>
            </div>
        </nav>
    </header>
    <main>
        <div>
            <div class="row">

                @RenderBody()

            </div>
        </div>
    </main>

    <footer>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
